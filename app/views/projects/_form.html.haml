= form_for @project do |f|
  -if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :about
    = f.text_area :about
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :source_url
    = f.text_field :source_url
  .field
    = f.label :skills
    = f.text_area :skills
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
