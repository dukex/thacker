= form_for @event do |f|
  -if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :about
    = f.text_area :about
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :skills
    = f.text_area :skills
  .field
    = f.label :address
    = f.text_field :address
  .actions
    = f.submit 'Save'
