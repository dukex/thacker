%h1 Listing events

%table
  %tr
    %th Name
    %th About
    %th Author
    %th Skills
    %th Address
    %th
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.name
      %td= event.about
      %td= event.author.name
      %td= event.skills
      %td= event.address
      %td= link_to 'Show', event
      %td= link_to 'Edit', edit_event_path(event)
      %td= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete

%br

